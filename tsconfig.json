{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "jsx": "react",
    "moduleResolution": "node",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "sourceMap": true,
    "declarationMap": true,
    "declaration": true,
    "pretty": true,
    "skipLibCheck": true,
    "preserveConstEnums": true,
    "lib": ["dom", "esnext"]
  },
  "exclude": ["node_modules"]
}
